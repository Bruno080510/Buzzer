{
    "manifest_version": 3,
    "name": "Buzzer",
    "author": "Bruno Leal e Kalisson Yuri",
    "version": "1.2",
    "description": "Extensão destinada para a verificação de sites não seguro, auxiliando o usuário a ter uma melhor navegação",
    "permissions": [
      "tabs",
      "activeTab",
      "webNavigation",
      "storage",
      "https://www.virustotal.com/*",
      "unlimitedStorage",
      "https://*/*",
      "http://*/*"
    ],
    
    "icons": {
      "16": "./images/logo.png",
      "48": "./images/logo.png",
      "128": "./images/logo.png"
  },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "https://www.virustotal.com/*"
      ],
      "browser_specific_settings": {
        "gecko": {
            "id": "brunolealmaciel@gmail.com"
        }
    } 
  }
  